<?xml version="1.0" ?>

<!-- 
	Brief citation for an eprint. Just gives the title or the type and ID number.
-->

<cite:citation xmlns="http://www.w3.org/1999/xhtml" xmlns:cite="http://eprints.org/ep3/citation" xmlns:epc="http://eprints.org/ep3/control">

<epc:choose>
  <epc:when test="medmus_type='work'">
	<cite:linkhere><epc:print expr="work_id"/>/<epc:print expr="instance_number"/></cite:linkhere>: <epc:print expr="title"/>
  </epc:when>
  <epc:when test="medmus_type='refrain'">
	<cite:linkhere><epc:print expr="refrain_id"/>/<epc:print expr="instance_number"/></cite:linkhere>: <epc:print expr="abstract_text"/>
  </epc:when>
</epc:choose>
</cite:citation>
